    <div class="ui huge header"><%= usuario.nombre %></div>
    <div class="ui top attached">
        <div class="item thumbnail">
          <img class="ui centered rounded image size" src="../<%= usuario.logo %>">
          <div class="content">
            <h2>Correo</h2>
            <span><%= usuario.correo %></span>
          </div>
          <div class="content">
            <h2>Direccion</h2>
